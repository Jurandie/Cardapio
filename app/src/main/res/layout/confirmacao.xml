<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirmacao_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c6302c"
    android:padding="16dp"
    tools:context=".ConfirmacaoActivity">

    <!-- Logo Superior -->
    <ImageView
        android:id="@+id/imageViewLogoConfirmacao"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/yosh"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título: Forma de Pagamento -->
    <TextView
        android:id="@+id/textViewLabelFormaPagamentoConfirmacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forma de pagamento"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogoConfirmacao"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Opções de Pagamento -->
    <RadioGroup
        android:id="@+id/radioGroupPagamentoConfirmacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textViewLabelFormaPagamentoConfirmacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/dinheiro"/>
            <RadioButton
                android:id="@+id/radioButtonDinheiroConfirmacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinheiro"
                android:textColor="#FFFFFF"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/cartao"/>
            <RadioButton
                android:id="@+id/radioButtonCreditoConfirmacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crédito"
                android:textColor="#FFFFFF"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/debito"/>
            <RadioButton
                android:id="@+id/radioButtonDebitoConfirmacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Débito"
                android:textColor="#FFFFFF"
                android:layout_marginStart="16dp"/>
        </LinearLayout>
    </RadioGroup>

    <!-- Título: Número da Mesa -->
    <TextView
        android:id="@+id/textViewLabelNumeroMesaConfirmacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número da mesa:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupPagamentoConfirmacao"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Opções de Mesa -->
    <RadioGroup
        android:id="@+id/radioGroupMesaConfirmacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textViewLabelNumeroMesaConfirmacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/radioButtonMesa1Confirmacao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Mesa 01"
            android:textColor="#FFFFFF"/>
        <RadioButton
            android:id="@+id/radioButtonMesa2Confirmacao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Mesa 02"
            android:textColor="#FFFFFF"/>
        <RadioButton
            android:id="@+id/radioButtonMesa3Confirmacao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Mesa 03"
            android:textColor="#FFFFFF"/>
    </RadioGroup>

    <!-- TextView para exibir o TOTAL DO PEDIDO -->
    <TextView
        android:id="@+id/textViewTotalPedidoConfirmacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: R$ 0,00"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonFinalizarPagamentoConfirmacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão Finalizar Pagamento -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonFinalizarPagamentoConfirmacao"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirmar Pedido"
        app:icon="@drawable/ic_add_shopping_cart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>